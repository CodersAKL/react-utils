{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6"],
    "sourceMap": false,
    "rootDir": "src",
    "strict": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "types": ["node", "mocha"]
  },
  "exclude": ["node_modules", ".vscode-test", "out"]
}
